<h1>Your boards</h1>

<%= link_to "New board", new_board_path %>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.id %></td>
        <td><%= board.title %></td>
        <td><%= link_to "Show", board_path(board) %></td>
        <td><%= link_to "Edit", edit_board_path(board) %></td>
        <td><%= link_to "Delete", board_path(board), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>