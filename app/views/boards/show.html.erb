<h1>Board: <%= @board.title %></h1>

<%= link_to "Add new list", new_board_list_path(@board), class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @board.lists.each do |list| %>
      <% if list.board.owner == current_user %>
      <tr>
        <td><%= list.id %></td>
        <td><%= list.title %></td>
        <td><%= link_to "Show", board_list_path(@board, list), class: 'btn btn-sm btn-default' %></td>
        <td><%= link_to "Edit", edit_board_list_path(@board, list), class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to "Delete", board_list_path(@board, list), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "Back", root_path %>