<h1>List: <%= @list.title %></h1>
<%=link_to "Add new task", new_list_task_path(@list) %>
<table>
  <thead>
    <tr>
      <th>ToDo</th>
      <th>Mark as done</th>
      <th colspan="3">Actions</th>
    </tr>  
  </thead>
  <tbody>
    <% @list.tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= "Mark as done" %></td>
        <td><%= link_to "Edit", edit_list_task_path(@list, task) %></td>
        <td><%= link_to "Delete", list_task_path(@list, task), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Home", root_path %>