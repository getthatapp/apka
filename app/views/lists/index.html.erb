<h1>Your lists</h1>

<%= link_to "New list", new_board_list_path %>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.id %></td>
        <td><%= list.title %></td>
        <td><%= link_to "Show", board_list_path([:board_id], list) %></td>
        <td><%= link_to "Edit", edit_board_list_path([:board_id], list) %></td>
        <td><%= link_to "Delete", board_list_path([:board_id], list), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>